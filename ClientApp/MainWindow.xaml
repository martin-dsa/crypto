<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Margin="26,29,728,353" Name="Label_A" Grid.ColumnSpan="2">
            a
        </Label>
        <TextBox Margin="47,28,443,358" Name="A" Grid.ColumnSpan="2">
        </TextBox>
        <Label Margin="26,74,728,308" Name="Label_B" Grid.ColumnSpan="2">
            b
        </Label>
        <TextBox Margin="47,80,443,306" Name="B" Grid.ColumnSpan="2" TextChanged="B_TextChanged">
        </TextBox>
        <Button x:Name="BrowseButton" Content="Browse a file" HorizontalAlignment="Left"
                Margin="485,13,0,0" VerticalAlignment="Top" Width="121" Click="BrowseButton_Click"
                RenderTransformOrigin="1.047,0.821" Height="40" Grid.ColumnSpan="2" />
        <TextBlock Margin="485,56,0,338" Name="Filename" Grid.ColumnSpan="2">
        </TextBlock>
        <Button x:Name="Encode" Content="Encode" HorizontalAlignment="Left"
                Margin="129,189,0,0" VerticalAlignment="Top" Width="121" Click="EncodeButton_Click"
                RenderTransformOrigin="1.047,0.821" Height="40" Grid.ColumnSpan="2" />
        <TextBlock Margin="33,244,452,150" Name="EncryptInfo" Grid.ColumnSpan="2">
        </TextBlock>
        <Button x:Name="Code" Content="Decode" HorizontalAlignment="Left"
                Margin="502,187,0,0" VerticalAlignment="Top" Width="121" Click="DecodeButton_Click"
                RenderTransformOrigin="1.047,0.821" Height="40" Grid.ColumnSpan="2" />
        <TextBlock Margin="413,241,72,153" Name="DecryptInfo" Grid.ColumnSpan="2">
        </TextBlock>
        <ComboBox HorizontalAlignment="Left" Margin="323,332,0,0" VerticalAlignment="Top" Width="120" Name="List" Grid.ColumnSpan="2" SelectionChanged="List_SelectionChanged" />
    </Grid>
</Window>